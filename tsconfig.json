{
  "compilerOptions": {
    "jsx": "react",
    "declaration": true,
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "lib",
    "module": "commonjs",
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "example"
  ]
}